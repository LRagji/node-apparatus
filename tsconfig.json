{
  "compilerOptions": {
    "experimentalDecorators": false,
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/esm",
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode"
  ]
}